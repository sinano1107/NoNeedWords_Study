<%= form_tag("/processing/study_preparation") do %>
  <div class="container">
    <h1>How do you study?</h1>
    <p class="error_text red-text accent-2"><%= @error_text %></p>
    <div class="row">
          <div class="col s4 m4">
              <h5>Which box?</h5>
              <div class="menu_element_wrapper">
                <form action="#">
                  <p>
                    <label>
                      <input name="box" type="radio" value="Unlearned" checked />
                      <span>New words</span>
                    </label>
                  </p>
                  <p>
                    <label>
                      <input name="box" type="radio" value="Learned" />
                      <span>Learned words</span>
                    </label>
                  </p>
                  <p>
                    <label>
                      <input name="box" type="radio" value="All" />
                      <span>All words</span>
                    </label>
                  </p>
                </form>
              </div>
            </div>
          <div class="col s4 m4">
            <h5>How many questions?</h5>
            <div class="input-field menu_element_wrapper">
              <select name="questions">
                <option varue="" disabled selected>Choose your option</option>
                <option selected>5</option>
                <%= for i in 6..25 do %>
                  <option><%= i %></option>
                <% end %>
              </select>
              <label>Materialize Select</label>
            </div>
          </div>
          <div class="col s4 m4">
              <h5>Random</h5>
              <div class="switch menu_element_wrapper">
                <label>
                  Off
                  <input type="checkbox" name="random" value="true" checked="checked">
                  <span class="lever"></span>
                  On
                </label>
              </div>
            </div>
        </div>
    <button type="submit" class="btn waves-effect waves-light right">OK!</button>

  </div>
<% end %>
